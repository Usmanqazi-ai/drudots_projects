<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.BusResultActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="271dp"
        android:layout_alignParentTop="true"
        android:background="@color/mainColor">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="matrix"
            android:src="@drawable/map_img" />

        <ImageView
            android:id="@+id/backBtnBusResult"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@drawable/bg_back_button"
            android:padding="5dp"
            android:layout_marginStart="20dp"
            android:layout_above="@id/imageView"
            android:layout_marginBottom="45dp"
            android:src="@drawable/path_back_white" />

        <TextView
            android:id="@+id/textViewSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/imageView"
            android:layout_marginBottom="45dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Bus Result"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtForSnack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textViewSchedule"
            android:layout_alignBottom="@+id/textViewSchedule"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="-54dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/bus_logo_white" />

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="LHR"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginHorizontal="10dp"
            android:src="@drawable/line_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/montserrat_semibold"
            android:text="ISB"
            android:textColor="@color/white"
            android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_below="@id/linearlayout"
            android:text="Wed, 27 Mar 2023"
            android:textColor="@color/white"
            android:textSize="12sp" />








    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/busResultList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentBottom="true"
        android:paddingTop="10dp"
        android:background="@color/white"
        android:paddingHorizontal="12dp" />




</RelativeLayout>