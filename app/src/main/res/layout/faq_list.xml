<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        android:elevation="5dp"
        android:background="@drawable/bg_book_seat">
<LinearLayout
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/txtQues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is online booking and do I use it?"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="15dp"

        />

    <TextView
        android:id="@+id/txtAns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Online booking is a convenient way of buying tickets over the internet."
        android:textSize="12sp"
        android:layout_marginStart="15dp"
        android:textColor="#80000000"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/poppins_medium"/>
</LinearLayout>
    <ImageView
        android:id="@+id/imgArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/forward_arrow"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"

        />
    </RelativeLayout>

</RelativeLayout>