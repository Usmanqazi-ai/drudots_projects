<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.ReportsActivity">

    <RelativeLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/mainColor">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/map_img"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/textViewSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/montserrat_semibold"
            android:text="My Reports"
            android:textColor="@color/white"
            android:textSize="14sp" />
        <ImageView
            android:id="@+id/backBtnMyReport"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/bg_back_button"
            android:padding="5dp"
            android:src="@drawable/path_back_white" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linLActive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        android:paddingStart="25dp">


        <TextView
            android:id="@+id/activeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_weight="1"
            android:paddingVertical="5dp"

            android:fontFamily="@font/poppins_medium"
            android:layout_marginHorizontal="25dp"
            android:gravity="center"
            android:text="Active"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/closedBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingVertical="5dp"

            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="15dp"
            android:text="Closed"
            android:textSize="14sp" />
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_below="@+id/linLActive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <FrameLayout
        android:id="@+id/reportFrameLayout"
        android:layout_below="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>