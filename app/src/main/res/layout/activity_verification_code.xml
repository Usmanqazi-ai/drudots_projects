<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.VerificationCodeActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_bus_logo"
        android:layout_centerInParent="true"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="20dp"
                android:src="@drawable/path_back"

                />

            <TextView
                android:id="@+id/txtSignUp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginStart="100dp"
                android:text="Verification"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_semibold"
                />
        </LinearLayout>


        <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_verification_code"
            android:layout_gravity="center"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Verification Code"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="22sp"
            android:fontFamily="@font/montserrat_semibold"/>

        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:textColor="#B335374A"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Enter the 6-digit OTP we've sent to your mobile."/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

        <TextView
            android:id="@+id/GetCountryCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+92"
            android:textSize="12sp"

            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/mainColor"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/GetPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="335689797"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/mainColor"
            android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:hintEnabled="false"
                android:gravity="bottom"
                app:boxStrokeColor="@color/mainColor"
                android:layout_marginStart="6dp"
                app:cursorColor="@color/transparent"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtOTP1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:textSize="15sp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/mainColor"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:maxLength="1"

                    />


            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:hintEnabled="false"
                android:gravity="bottom"
                app:boxStrokeColor="@color/mainColor"
                android:layout_marginStart="6dp"
                app:cursorColor="@color/transparent"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtOTP2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:textSize="15sp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/mainColor"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:maxLength="1"

                    />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:hintEnabled="false"
                android:gravity="bottom"
                app:boxStrokeColor="@color/mainColor"
                android:layout_marginStart="6dp"
                app:cursorColor="@color/transparent"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtOTP3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:textSize="15sp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/mainColor"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:maxLength="1"

                    />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:hintEnabled="false"
                android:gravity="bottom"
                app:boxStrokeColor="@color/mainColor"
                android:layout_marginStart="6dp"
                app:cursorColor="@color/transparent"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtOTP4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:textSize="15sp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/mainColor"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:maxLength="1"

                    />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:hintEnabled="false"
                android:gravity="bottom"
                app:boxStrokeColor="@color/mainColor"
                android:layout_marginStart="6dp"
                app:cursorColor="@color/transparent"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtOTP5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:textSize="15sp"
                    android:imeOptions="actionNext"

                    android:textColor="@color/mainColor"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:maxLength="1"

                    />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:hintEnabled="false"
                android:gravity="bottom"
                app:boxStrokeColor="@color/mainColor"
                android:layout_marginStart="6dp"
                app:cursorColor="@color/transparent"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtOTP6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:textSize="15sp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/mainColor"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:maxLength="1"

                    />


            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>




        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/verifyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify"
            android:background="@drawable/button_bg"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="40dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textAppearance="@style/ShapeAppearance.Material3.Corner.Small"
            android:fontFamily="@font/montserrat_medium" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="39dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code not found?"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/txtResend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend"
            android:padding="5dp"
            android:textSize="12sp"
            android:layout_marginStart="11dp"
            android:textColor="@color/mainColor"
            android:fontFamily="@font/montserrat_bold"
            />

        </LinearLayout>



    </LinearLayout>
    </ScrollView>

</RelativeLayout>