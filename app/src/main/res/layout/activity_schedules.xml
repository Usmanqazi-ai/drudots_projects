<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.SchedulesActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_alignParentTop="true"
        android:background="@color/mainColor">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/map_img" />


        <ImageView
            android:id="@+id/backBtnSchedules"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/bg_back_button"
            android:padding="5dp"
            android:src="@drawable/path_back_white" />

        <TextView
            android:id="@+id/textViewSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Schedules"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtForSnack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewSchedule"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/schedulesCard"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginHorizontal="12dp"
       android:layout_below="@id/relativeLayout"
        android:background="@drawable/bg_book_seat"
        android:elevation="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-100dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@drawable/bus_logo_red" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="33dp"
            android:background="@drawable/bd_text_filed">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/ic_depture_city" />


            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/departureCitySpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="departure city"
                android:background="@drawable/spinner_background"
                android:popupBackground="@color/white"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bd_text_filed">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/ic_arrival_city" />


            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/arrivalCitySpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="departure city"
                android:background="@drawable/spinner_background"
                android:popupBackground="@color/white"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bd_text_filed">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/ic_chosse_date" />


            <TextView
                android:id="@+id/txtDate"
                android:layout_width="223dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/transparent"
                android:enabled="true"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center_vertical"
                android:hint="Select Date"
                android:padding="10dp"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="15dp"
                android:src="@drawable/down_mark" />
        </LinearLayout>


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/findBusButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/montserrat_medium"
        android:text="Find Bus"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/schedulesCard"
        android:layout_marginTop="30dp"
        android:textAppearance="@style/ShapeAppearance.Material3.Corner.Small"
        android:textColor="@color/white"
        android:textSize="14sp" />


</RelativeLayout>