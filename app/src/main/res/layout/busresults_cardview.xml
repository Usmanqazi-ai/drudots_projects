<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="15dp"
    android:background="@drawable/bg_bus_result">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="42 Seats"
        android:textSize="10sp"
        android:fontFamily="@font/montserrat_semibold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bus No: 8601"
        android:layout_marginHorizontal="89dp"
        android:textSize="10sp"
        android:fontFamily="@font/montserrat_semibold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="PKR 2200"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LHR(Thokar)"
        android:textSize="12sp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/mainColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03 Hour &amp; 30 Mints"
            android:layout_marginStart="52dp"
            android:layout_marginEnd="67dp"
            android:textSize="10sp"
            android:fontFamily="@font/montserrat_medium"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ISB(Fzd)"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/mainColor"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

    <TextView
        android:id="@+id/timeDeparture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="06:30 AM"
        android:textSize="12sp"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginStart="5dp"
        android:textColor="#B3000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lahore"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="15dp"
            android:textSize="10sp"
            android:fontFamily="@font/montserrat_semibold"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_red"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Islamabad"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:textSize="10sp"
            android:fontFamily="@font/montserrat_semibold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11:30 AM"
        android:textSize="12sp"

        android:fontFamily="@font/montserrat_medium"
        android:layout_marginStart="14dp"
        android:textColor="#B3000000"/>
    </LinearLayout>

    <TextView
        android:id="@+id/busName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"

        android:layout_marginVertical="10dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Yutong"
        android:textSize="12dp" />

</LinearLayout>