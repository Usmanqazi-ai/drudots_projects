<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.ReportProblemActivity">

    <RelativeLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/mainColor">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/map_img"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/textReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Report a Problem"
            android:textColor="@color/white"
            android:textSize="14sp" />
        <ImageView
            android:id="@+id/backBtnReportProblem"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/bg_back_button"
            android:padding="5dp"
            android:src="@drawable/path_back_white" />


    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/appbar">

    <LinearLayout
        android:id="@+id/rlScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

<TextView
    android:id="@+id/anchor"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"

   />
        <ImageView
            android:id="@+id/bgImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bg_report_problem"
            />




    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/reportCategorySpinner"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="15dp"
        android:elevation="3dp"
        android:background="@drawable/bg_imgs_help"
        android:popupBackground="@drawable/bg_spinner"

        />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"

            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="15dp"
            android:elevation="2dp"

            android:background="@drawable/bg_imgs_help">


        <EditText
            android:id="@+id/complainEditText"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:backgroundTint="@color/transparent"
            android:gravity="top"
            android:textColorHint="@color/black"
            android:hint="Please enter your complaint here!"
            android:fontFamily="@font/poppins_medium"
            android:padding="10dp"
            android:textSize="11sp"
           />


        </LinearLayout>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/montserrat_medium"
        android:text="Submit"
        android:layout_below="@+id/linLComplain"
        android:layout_marginTop="15dp"
        android:textAppearance="@style/ShapeAppearance.Material3.Corner.Small"
        android:textColor="@color/white"
        android:textSize="14sp" />

    </LinearLayout>

</ScrollView>



</RelativeLayout>