<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ChangePasswordActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:background="@color/mainColor">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="matrix"
            android:layout_alignParentTop="true"
            android:src="@drawable/map_img" />


        <ImageView
            android:id="@+id/backButtonChangePassword"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_back_button"
            android:padding="5dp"
            android:src="@drawable/path_back_white" />

        <ImageView
            android:id="@+id/appbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/appbar_logo" />

        <TextView
            android:id="@+id/txtChangePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text="Change Your Password"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_below="@+id/backButtonChangePassword"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"

            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="35dp"
        android:layout_below="@id/relativeLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Old Password"
            android:layout_marginTop="12dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="8dp"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_semibold"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textLayoutOldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            app:hintEnabled="false"
            app:boxStrokeColor="#15000000"
            app:cursorColor="#B3000000"
            app:boxStrokeWidthFocused="1dp"
            app:startIconDrawable="@drawable/ic_lock_password"
            app:startIconTint="@null"
            app:passwordToggleEnabled="true"
            app:passwordToggleDrawable="@drawable/eye_off"


            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/changeOldPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="********"
                android:textSize="12sp"
                android:maxLength="10"
                android:inputType="textPassword"
                android:singleLine="true"
                android:fontFamily="@font/montserrat_semibold"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Password"
            android:layout_marginTop="12dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="8dp"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_semibold"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textLayoutNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            app:hintEnabled="false"
            app:boxStrokeColor="#15000000"
            app:cursorColor="#B3000000"
            app:boxStrokeWidthFocused="1dp"
            app:startIconDrawable="@drawable/ic_lock_password"
            app:startIconTint="@null"
            app:passwordToggleEnabled="true"
            app:passwordToggleDrawable="@drawable/eye_off"


            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/changeNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="********"
                android:textSize="12sp"
                android:maxLength="10"
                android:inputType="textPassword"
                android:singleLine="true"
                android:fontFamily="@font/montserrat_medium"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:layout_marginTop="12dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="8dp"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_semibold"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/changeConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            app:hintEnabled="false"
            app:boxStrokeColor="#15000000"
            app:cursorColor="#B3000000"
            app:boxStrokeWidthFocused="1dp"
            app:startIconDrawable="@drawable/ic_lock_password"
            app:startIconTint="@null"
            app:passwordToggleEnabled="true"
            app:passwordToggleDrawable="@drawable/eye_off"


            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/confirmNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="********"
                android:textSize="12sp"
                android:maxLength="10"
                android:inputType="textPassword"
                android:singleLine="true"
                android:fontFamily="@font/montserrat_medium"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/changePasswordBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:background="@drawable/button_bg"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="40dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textAppearance="@style/ShapeAppearance.Material3.Corner.Small"
            android:fontFamily="@font/montserrat_medium" />
    </LinearLayout>

</RelativeLayout>