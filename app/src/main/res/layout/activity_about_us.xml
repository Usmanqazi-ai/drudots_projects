<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.AboutUsActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainColor">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:scaleType="matrix"
            android:src="@drawable/map_img" />

        <ImageView
            android:id="@+id/appbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:src="@drawable/appbar_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appbar"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/backButtonAboutUs"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_back_button"
                android:padding="5dp"
                android:src="@drawable/path_back_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"

                android:text="My Ticket"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeLayout"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp"
        android:paddingBottom="30dp"
        android:elevation="5dp"
        android:background="@drawable/bg_about_us">


<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_express_red"
    android:layout_marginStart="15dp"
    android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Welcome to our bus reservation service, your one-stop destination for convenient and hassle-free travel experiences. We are dedicated to providing top-quality bus reservation services to travelers, ensuring their journeys are comfortable, safe, and enjoyable.
"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_regular"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Online bus ticket has become"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="25dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Our commitment to customer satisfaction drives us to deliver exceptional service. From the moment you visit our website or contact our customer support, our team is ready to assist you at every step of your reservation journey. We believe in creating a personalized experience and tailor our services to meet your specific travel requirements."
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_regular"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Online bus ticket has become"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Our commitment to customer satisfaction drives us to deliver exceptional service. From the moment you visit our website or contact our customer support, our team is ready to assist you at every step of your reservation journey. We believe in creating a personalized experience and tailor our services to meet your specific travel requirements."
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_regular"/>



    </LinearLayout>

</RelativeLayout>